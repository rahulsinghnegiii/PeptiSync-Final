{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
    
    "vendorPrices": {
      ".read": true,
      ".write": "auth != null"
    },
    
    "foundingUserCounter": {
      ".read": true,
      ".write": "root.child('admins').child(auth.uid).exists()"
    },
    
    "contactSubmissions": {
      ".read": "root.child('admins').child(auth.uid).exists()",
      ".write": true,
      "$submissionId": {
        ".validate": "newData.hasChildren(['name', 'email', 'message', 'timestamp'])"
      }
    }
  }
}

